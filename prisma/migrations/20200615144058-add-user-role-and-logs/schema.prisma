datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
}

model User {
  id String @default(cuid()) @id
  email String
  password String
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logs Log[]
  role Role @default(USER)
}

model Log {
  id String @default(cuid()) @id
  type String
  name String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
